<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp">

    <TextView
        android:id="@+id/textCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textCourseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code: COURSE101"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textInstructorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor: Dr. Example"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
        
    <TextView
        android:id="@+id/textStudentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students: 30"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />
        
    <TextView
        android:id="@+id/textAverageGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Grade: N/A"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_edit_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Edit Course" />

        <ImageButton
            android:id="@+id/btn_delete_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete Course" />
            
        <ImageButton
            android:id="@+id/btn_add_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="Add Student to Course" />
            
        <ImageButton
            android:id="@+id/btn_grade_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Add Grade" />
    </LinearLayout>
</LinearLayout>