<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EEEEEE"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/textCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code: COURSE101" />

    <TextView
        android:id="@+id/textInstructorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructor: Dr. Example" />

    <TextView
        android:id="@+id/textStudentCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Students: 30" />
    
    <TextView
        android:id="@+id/textAverageGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Average Grade: N/A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_edit_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:drawableTop="@drawable/ic_edit"
            android:textSize="10sp"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btn_delete_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:drawableTop="@drawable/ic_delete"
            android:textSize="10sp"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btn_add_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:drawableTop="@drawable/ic_add"
            android:textSize="10sp"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btn_grade_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grade"
            android:drawableTop="@drawable/ic_grade"
            android:textSize="10sp"
            android:layout_margin="2dp" />
    </LinearLayout>

</LinearLayout>