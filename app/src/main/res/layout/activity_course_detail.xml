<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textCourseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/textCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name: Sample Course"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textCourseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Code: CS101"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor: Dr. John Doe"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textStudentsEnrolled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrolled Students: 30"
        android:textSize="16sp"/>
        
    <TextView
        android:id="@+id/textGradeDistribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade Distribution"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>
        
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartGrades"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>
